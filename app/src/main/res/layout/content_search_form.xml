<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/weather"
    android:orientation="vertical"
    tools:showIn="@layout/activity_search_form" tools:context=".SearchFormActivity">

    <TextView
        android:text="Forecast Search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginTop="20sp"
        android:gravity="center_horizontal"
        android:id="@+id/forecasttitle"
        />


    <TextView
        android:text="Street"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="30sp"
        android:layout_below="@+id/forecasttitle"
        android:id="@+id/streetName"
        android:gravity="left"
        />
      <EditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/forecasttitle"
          android:layout_alignParentRight="true"
          android:layout_toRightOf="@+id/streetName"
          android:textSize="20sp"
          android:layout_marginTop="40sp"
          android:layout_marginLeft="60sp"
          android:id="@+id/streetValue"
          />
    <TextView
        android:text="City"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:id="@+id/city"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/streetName"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="30sp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/streetValue"
        android:layout_alignParentRight="true"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/city"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="90sp"
        android:id="@+id/cityValue"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="State"
        android:id="@+id/state"
        android:layout_below="@id/city"
        android:textSize="40sp"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="30sp"
        />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cityValue"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/state"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="90sp"
        android:id="@+id/text1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Degree"
        android:textSize="40sp"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="30sp"
        android:layout_below="@+id/state"
        android:id="@+id/degree"

        />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/degree"
        android:layout_below="@+id/text1"
        android:id="@+id/temp"
        android:checkedButton="@+id/fah"
        android:layout_marginTop="30sp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="20sp"
            android:text="Fahrenheit"
            android:textSize="30sp"
            android:id="@+id/fah"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="20sp"
            android:text="Celcius"
            android:textSize="30sp"
            android:id="@+id/cel"
            />

    </RadioGroup>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_below="@+id/temp"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="30sp"
        android:textSize="35sp"
        android:id="@+id/searchButton"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="30sp"
        android:layout_below="@+id/temp"
        android:layout_toRightOf="@+id/searchButton"
        android:textSize="35sp"
        android:id="@+id/clearButton"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/errorLabel"
        android:textSize="30sp"
        android:textColor="#FF0000"
        android:layout_below="@id/searchButton"
        android:layout_marginTop="20sp"
        android:gravity="center_horizontal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:layout_below="@+id/searchButton"
        android:layout_marginTop="150sp"
        android:layout_marginLeft="30sp"
        android:textSize="35sp"
        android:id="@+id/about"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powered By:"
        android:layout_below="@+id/clearButton"
        android:layout_marginTop="150sp"
        android:layout_toRightOf="@+id/about"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="230sp"
        android:textSize="30sp"
        android:id="@+id/power"/>
    <ImageButton
        android:layout_width="180sp"
        android:layout_height="90sp"
        android:background="@drawable/forecast_logo"
        android:layout_below="@+id/power"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10sp"
        android:layout_gravity="center"
        android:id="@+id/forecastIO"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/unit"/>
</RelativeLayout>
