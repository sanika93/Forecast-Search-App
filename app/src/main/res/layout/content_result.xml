<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_result"
    tools:context="com.example.sanika.forecastsearch.ResultActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:id="@+id/MoreDetails"
        android:text="MORE DETAILS"
        android:textSize="30px"
        android:layout_marginTop="30px"
        android:layout_marginLeft="30px"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:layout_toRightOf="@+id/MoreDetails"
        android:textSize="30px"
        android:text="VIEW MAP"
        android:layout_marginTop="30px"
        android:layout_marginLeft="20px"
        android:id="@+id/ViewMap"/>

    <ImageButton
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_toRightOf="@+id/ViewMap"
        android:layout_marginTop="30px"
        android:layout_marginLeft="30px"
        android:background="@drawable/fb_icon"
        android:id="@+id/fbLoginButton"
        />


        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dip"
            android:layout_below="@+id/MoreDetails"
            android:layout_marginTop="20px"
            android:stretchColumns="0"
            android:shrinkColumns="*"
            >

         <TableRow
             android:gravity="center"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"

             >


             <ImageView

                 android:id="@+id/iconImage"
                 android:layout_width="0dp"
                 android:layout_height="150dp"
                 android:layout_gravity="center_horizontal"
                 android:paddingBottom="30px"
                 />

         </TableRow>


            <TableRow
                android:gravity="center"
                >

                <TextView
                    android:textSize="40px"
                    android:layout_gravity="center"
                    android:id="@+id/summary"
                    android:paddingTop="30px"
                    />

            </TableRow>

         <TableRow
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:gravity="center">

             <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_gravity="center"
                 android:paddingTop="50px"
                 android:id="@+id/temperatureMain"
                 />



         </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="30px"
                    android:layout_gravity="center"
                    android:paddingTop="50px"
                    android:id="@+id/minmaxmain"
                    />



            </TableRow>



         <TableRow
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:paddingTop="10px"
             android:paddingBottom="10px"
             >

         <TextView
             android:layout_width="fill_parent"
             android:text="Precipitation"
             android:textSize="30px"


             />

             <TextView
                 android:layout_width="fill_parent"
                 android:layout_column="1"
                 android:textSize="30px"
                 android:id="@+id/precip"

                 />



         </TableRow>

            <TableRow
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chance of Rain"
                    android:textSize="30px"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30px"
                    android:id="@+id/cor"
                    />



            </TableRow>


            <TableRow
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:layout_width="wrap_content"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wind Speed"
                    android:textSize="30px"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30px"

                    android:id="@+id/ws"
                    />



            </TableRow>

            <TableRow
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:layout_width="wrap_content"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dew Point"
                    android:textSize="30px"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30px"

                    android:id="@+id/dp"
                    />




            </TableRow>

            <TableRow
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:layout_width="wrap_content"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humidity"
                    android:textSize="30px"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30px"

                    android:id="@+id/humid"
                    />



            </TableRow>

            <TableRow
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:layout_width="wrap_content"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visibility"
                    android:textSize="30px"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30px"

                    android:id="@+id/visible"
                    />



            </TableRow>

            <TableRow
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:layout_width="wrap_content"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunrise"
                    android:textSize="30px"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30px"

                    android:id="@+id/sunrise"
                    />



            </TableRow>

            <TableRow
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:layout_width="wrap_content"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunset"
                    android:textSize="30px"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30px"

                    android:id="@+id/sunset"
                    />



            </TableRow>




        </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result"/>

    </RelativeLayout>
</ScrollView>
